APP_PORT=3000
APP_TIMEZONE=Asia/Makassar
ENABLE_SWAGGER=false
ENABLE_CORS=true
CORS_ORIGINS=https://yourdomain.com

# Database MySQL
DB_TYPE=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USERNAME=db_username_here
DB_PASSWORD=db_password_here
DB_NAME=revenue
DB_SSL=false
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_TIMEZONE="+08:00"

# JWT - GANTI DENGAN SECRET YANG KUAT!
JWT_SECRET=change_this_to_random_secret_key
JWT_ACCESS_TTL_SECONDS=86400
JWT_REFRESH_TTL_SECONDS=604800

# Seed admin user on first run
SEED_DEFAULT_USERS=true

# Google Sheets Integration
GOOGLE_SHEETS_ENABLED=false
# Option 1: Use credentials file
GOOGLE_SHEETS_CREDENTIALS_FILE=./google-credentials.json
# Option 2: Use inline credentials (for production)
# GOOGLE_SHEETS_CLIENT_EMAIL=service-account@project.iam.gserviceaccount.com
# GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# Spreadsheet ID from URL: https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here
# Sync interval in seconds (default: 60)
GOOGLE_SHEETS_SYNC_INTERVAL=60